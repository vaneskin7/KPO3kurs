<Window x:Class="KPO3kurs.EditEmployeeInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KPO3kurs"
        mc:Ignorable="d"
        Title="EditEmployeeInfo" Height="450" Width="800">
    <Grid>
        <TabControl BorderBrush="White">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <Label Content="ФИО" HorizontalAlignment="Left" Margin="34,10,0,0" VerticalAlignment="Top"/>
                    <Label Content="Должность" HorizontalAlignment="Left" Margin="34,59,0,0" VerticalAlignment="Top"/>
                    <Label Content="Дата устройства" HorizontalAlignment="Left" Margin="34,108,0,0" VerticalAlignment="Top"/>
                    <Label Content="Пол" HorizontalAlignment="Left" Margin="34,162,0,0" VerticalAlignment="Top"/>
                    <Label Content="Дата рождения" HorizontalAlignment="Left" Margin="34,208,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="nameTextBox" HorizontalAlignment="Left" Margin="34,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="hgf"/>
                    <TextBox x:Name="rankTextBox" HorizontalAlignment="Left" Margin="34,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="dateTextBox" HorizontalAlignment="Left" Margin="34,139,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="genderTextBox" HorizontalAlignment="Left" Margin="34,185,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="birthDateTextBox" HorizontalAlignment="Left" Margin="34,234,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <Button x:Name="saveChangesButton" Content="Сохранить изменения" HorizontalAlignment="Left" Margin="34,276,0,0" VerticalAlignment="Top" Click="saveChangesButton_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="39*"/>
                        <ColumnDefinition Width="755*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
